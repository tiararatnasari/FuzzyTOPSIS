                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/f_cari_parkirmobil"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/flipper_cari_fasumterdekat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="Jarak Kos dengan Fasilitas Umum"
                    android:textColor="@color/colorPutih"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/colorPutih"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Restaurant"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/f_cari_restaurant"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="restaurant"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/colorPutih"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Warnet"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/f_cari_warnet"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="warnet"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/colorPutih"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Mall"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/f_cari_mall"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="mall"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/colorPutih"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Apotek"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/f_cari_apotek"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="apotek"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/colorPutih"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="bank"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/f_cari_bank"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="bank"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/colorPutih"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="kendaraan umum"
