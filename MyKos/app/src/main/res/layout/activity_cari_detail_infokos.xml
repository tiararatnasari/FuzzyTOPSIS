                        android:text="Tempat Tidur"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp"
                        android:enabled="false"/>

                    <CheckBox
                        android:id="@+id/c_cari_kipasangin"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Kipas Angin"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp"
                        android:enabled="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPutih"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/c_cari_ac"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="AC"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp"
                        android:enabled="false"/>

                    <CheckBox
                        android:id="@+id/c_cari_kmluar"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="KM Luar"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp"
                        android:enabled="false"/>
                </LinearLayout>

                <LinearLayout
