                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="TV"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp"
                        android:enabled="false"/>

                    <CheckBox
                        android:id="@+id/c_cari_kulkas"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Kulkas"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp"
                        android:enabled="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPutih"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/c_cari_mesincuci"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Mesin Cuci"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp"
                        android:enabled="false"/>

                    <CheckBox
                        android:id="@+id/c_cari_dispenser"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Dispenser"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp"
                        android:enabled="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPutih"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/c_cari_pembantu"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Pembantu"
                        android:textColor="@color/colorHitam"
                        android:textSize="15sp"
                        android:enabled="false"/>

                    <CheckBox
                        android:id="@+id/c_cari_cucigosok"
                        android:layout_width="130dp"
